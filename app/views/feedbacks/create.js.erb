
(function(){



var container = $('.feedback');

var formHeight = $('.feedbackform').height();
var alert = conatiner.find('#feedbackAlert')

<% if @feedback.errors.any? %>

	if ($('#feedbackAlert').html() === "" )
		$('#feedbackAlert').hide();
		// $('#feedbackAlert').css('height' , '0');

	curAlertHeight = $('#feedbackAlert').html("<%= escape_javascript( render 'shared/feedback_error_messages') %>")
										.height(); 
	$('#feedbackAlert').css('height', 'auto');

	var alertHeight = $('#feedbackAlert').outerHeight();
	$('#feedbackAlert').css('height', curAlertHeight);
	
	if (!($('#feedbackAlert').is(":visible")) )
		$('#feedbackAlert').css('height' , '0').show();

	var newHeight = (alertHeight + 320);
	console.log(alertHeight + "and" + formHeight);

	$('.feedbackArea').animate({ 
		"height": newHeight 
	}, { duration: 500, queue: false }); 
	$('#feedbackAlert').show().animate({ 
		"height": alertHeight
	}, { duration: 500, queue: false });

<% else %>
	container.find('#feedbackAlert').text("Thank You!!!!").show();

	container.find('.feedbackform').hide();

	container.find('#formID')[0].reset();
<% end %>

})();





